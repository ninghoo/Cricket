<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="140dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#ffffff"
        android:elevation="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_iv_teamLeft"
            android:layout_toStartOf="@+id/item_iv_teamLeft"
            android:gravity="center"
            android:singleLine="true"
            android:text="De devli"
            android:textSize="10dp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="307/8"
            android:textSize="15dp"
            android:textStyle="bold"
            android:typeface="normal"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/item_iv_teamRight"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="167/6"
            android:textSize="15dp"
            android:textStyle="normal"
            android:typeface="normal"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView2"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_iv_teamLeft"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="9dp"
            android:background="#fff"
            app:civ_border_color="#5b5b5b"
            app:civ_border_width="1px"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="VS"
            android:textSize="9dp"
            android:textStyle="italic|bold"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_iv_teamRight"
            android:layout_alignTop="@+id/item_iv_teamRight"
            android:layout_marginStart="46dp"
            android:layout_toRightOf="@+id/item_iv_teamRight"
            android:gravity="center"
            android:singleLine="true"
            android:text="Mubai Indians"
            android:textSize="10dp"
            android:textStyle="normal"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_iv_teamRight"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:background="#ffffff"
            android:src="@drawable/colormumbaiindians"
            app:civ_border_color="#5b5b5b"
            app:civ_border_width="1px"
            android:layout_alignTop="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"/>


    </RelativeLayout>

    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/line"/>-->

</LinearLayout>